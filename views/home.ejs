<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage - URL Shortener</title>
    <style>
        /* Dark Mode Styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #121212;
            color: #e0e0e0;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            box-sizing: border-box;
        }

        h1 {
            color: #ffffff;
            font-size: 2.5rem;
            margin-bottom: 30px;
        }

        /* Form Container */
        .form_div {
            background-color: #333333;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            width: 80%;
            max-width: 500px;
            text-align: center;
        }

        .form_div h2 {
            margin-bottom: 15px;
            font-size: 1.2rem;
            color: #ffffff;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            margin: 15px 0;
            border-radius: 8px;
            border: 1px solid #444;
            font-size: 1rem;
            background-color: #222222;
            color: #ffffff;
            outline: none;
        }

        input[type="text"]:focus {
            border-color: #007BFF;
        }

        .btn {
            border: 2px solid #007BFF;
            border-radius: 8px;
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 1rem;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .short-url {
            margin-top: 20px;
            font-size: 1.1rem;
            color: #f0f0f0;
        }

        .short-url a {
            color: #007BFF;
            text-decoration: none;
            font-weight: bold;
        }

        .short-url a:hover {
            text-decoration: underline;
        }

        /* Table Styles */
        table {
            margin-top: 40px;
            width: 100%;
            border-collapse: collapse;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        th,
        td {
            padding: 12px;
            text-align: left;
            border: 1px solid #444;
        }

        th {
            background-color: #444444;
            color: #ffffff;
        }

        tr:nth-child(even) {
            background-color: #555555;
        }

        tr:hover {
            background-color: #666666;
        }

        /* No URL found text */
        p.no-urls {
            font-size: 1.2rem;
            color: #888888;
        }

        /* Mobile Responsiveness */
        @media screen and (max-width: 768px) {
            h1 {
                font-size: 2rem;
                margin-bottom: 20px;
            }

            .form_div {
                width: 90%;
                padding: 20px;
            }

            input[type="text"] {
                font-size: 1rem;
                padding: 8px;
            }

            .btn {
                padding: 8px 16px;
                font-size: 1rem;
            }

            table {
                width: 100%;
                margin-top: 30px;
            }

            th, td {
                padding: 10px;
                font-size: 0.9rem;
            }

            .short-url {
                font-size: 1rem;
            }
        }

        /* Larger screens */
        @media screen and (min-width: 769px) {
            table {
                width: 80%;
            }

            th, td {
                padding: 12px;
                font-size: 1rem;
            }

            .btn {
                padding: 10px 20px;
                font-size: 1rem;
            }
        }
    </style>
</head>

<body>
    <h1>URL Shortener</h1>

    <div class="form_div">
        <form method="POST" action="/url">
            <h2>Enter your URL</h2>
            <input type="text" placeholder="https://example.com" name="url" required><br>
            <button type="submit" class="btn">Generate</button>
        </form>

        <% if (locals.id) { %>
            <div class="short-url">
                <p>Shortened URL:
                    <a href="http://localhost:8001/<%= id %>" target="_blank">
                        http://localhost:8001/<%= id %>
                    </a>
                </p>
            </div>
        <% } %>
    </div>

    <% if (urls && urls.length > 0) { %>
        <h3>List of Shortened URLs:</h3>
        <table>
            <thead>
                <tr>
                    <th>S.no</th>
                    <th>Short ID</th>
                    <th>Redirect URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% 
                    // Slice the last 10 URLs
                    const lastUrls = urls.slice(-10).reverse(); 
                    lastUrls.forEach((url, index) => { 
                %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= url.shortID %></td>
                        <td><%= url.redirectURL %></td>
                        <td><%= url.visited.length %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p class="no-urls">No URLs found.</p>
    <% } %>
</body>

</html>
